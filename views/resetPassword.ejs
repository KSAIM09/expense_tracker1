<%- include("partials/header")%> <%- include("partials/nav")%>
        
        

        <div class="flex justify-center items-center">
            <div class="flex flex-col w-[680px] justify-between items-center">

                <h1 class="text-blue-700 text-6xl mt-[10px]"><%=title%></h1>

                <form action="/user/reset-password" method="post" class="flex flex-col justify-center items-start w-[400px] gap-[10px] mt-5 h-[300px]">

                        <label class="text-xl mr-4" for="oldpassword">Old Password:</label>
                        <input id="oldpassword" class="p-[5px]" type="password" name="oldpassword" placeholder="******">

                        <label class="text-xl mr-4" for="newpassword">New Password:</label>
                        <input id="newpassword" class="p-[5px]" type="password" name="newpassword" placeholder="******">

                    
                    <div >
                        <button class="p-[10px] bg-blue-700 rounded-xl hover:bg-blue-900 text-white text-xl left-0">
                            Reset Password
                        </button>
                    </div>
                    
                    
                </form>
            </div>
        </div>
        <script>
            function validateForm() {
                const oldPassword = document.querySelector('[name="oldpassword"]').value;
                const newPassword = document.querySelector('[name="newpassword"]').value;
            
                if (!oldPassword || !newPassword) {
                    alert('Both password fields are required.');
                    return false;
                }
                return true;
            }
            </script>
        

