<%- include("partials/header")%>
<%- include("partials/nav")%>
<div class="flex justify-center items-center min-h-screen bg-[#222831]">
    <div class="flex flex-col w-[680px] justify-center items-center p-8 bg-[#393E46] rounded-lg shadow-lg">
        <h1 class="text-[#EEEEEE] text-4xl font-semibold mb-8"><%= title %></h1>

        <div class="flex flex-col gap-6 w-[540px]">

            <!-- Aligning labels and values with better spacing and text styling -->
            <div class="grid grid-cols-2 gap-4">
                <p class="text-lg font-medium text-[#EEEEEE]">Title:</p>
                <p class="text-lg text-[#EEEEEE] text-end uppercase"><%= expense.title %></p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <p class="text-lg font-medium text-[#EEEEEE]">Amount:</p>
                <p class="text-lg text-[#EEEEEE] text-end uppercase" ><%= expense.amount %> rupees</p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <p class="text-lg font-medium text-[#EEEEEE]">Category:</p>
                <p class="text-lg text-[#EEEEEE] text-end uppercase"><%= expense.category %></p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <p class="text-lg font-medium text-[#EEEEEE]">Remark:</p>
                <p class="text-lg text-[#EEEEEE] text-end uppercase"><%= expense.remark %></p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <p class="text-lg font-medium text-[#EEEEEE]">Payment Mode:</p>
                <p class="text-lg text-[#EEEEEE] text-end uppercase"><%= expense.paymentmode %></p>
            </div>

            <!-- Buttons are centered and given a better style -->
            <div class="flex justify-center gap-4 mt-6">
                <a class="px-6 py-3 bg-red-600 rounded-xl hover:bg-red-800 text-white text-lg font-semibold transition duration-200 ease-in-out" href="/expense/delete/<%= expense._id %>">Delete</a>
                <a class="px-6 py-3 bg-cyan-500 rounded-xl hover:bg-cyan-700 text-white text-lg font-semibold transition duration-200 ease-in-out" href="/expense/update/<%= expense._id %>">Edit</a>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer")%>
