

<%- include("partials/header")%>
    <%- include("partials/nav")%>
        <div class="flex justify-center items-center" >
            <div class="flex flex-col w-[680px] justify-center items-center">
                <h1 class="text-blue-700 text-6xl mt-[10px]"><%=title%></h1>
                <br>
                <div class="flex flex-col gap-4 w-[540px] justify-center">

                    <div class="flex justify-between">
                        <p class="underline text-xl">Title:</p>
                        <p><%= expense.title %></p>
                    </div>

                    <div class="flex justify-between">
                        <p class="underline text-xl">Amount:</p>
                        <p><%= expense.amount %> rupees</p>
                    </div>

                    <div class="flex justify-between">
                        <p class="underline text-xl">Category:</p>
                        <p><%= expense.category %></p>
                    </div>
                    
                    <div class="flex justify-between">
                        <p class="underline text-xl">Remark:</p>
                        <p><%= expense.remark %></p>
                    </div>
                    
                    <div class="flex justify-between">
                        <p class="underline text-xl">Payment Mode:</p>
                        <p><%= expense.paymentmode %></p>
                    </div>
                
                    
                    <a class="p-[10px] bg-cyan-500 rounded-xl hover:bg-cyan-700 text-white text-xl text-center" href="/expense/delete/<%= expense._id%>">Delete</a>
                    <a class="p-[10px] bg-cyan-500 rounded-xl hover:bg-cyan-700 text-white text-xl text-center" href="/expense/update/<%= expense._id%>">Edit</a>
                </div>
                
            </div>
        </div>
        
        

