<%- include("partials/header")%>
<%- include("partials/nav")%>

<div class="flex justify-center items-center min-h-screen bg-[#222831] p-8">
    <div class="flex flex-col w-[680px] p-8 bg-[#393E46] rounded-lg shadow-lg">
        <h1 class="text-[#EEEEEE] text-4xl font-semibold mb-8"><%= title %></h1>

        <form action="/user/signin" method="post" class="flex flex-col gap-6 text-[#EEEEEE]">

            <div class="flex flex-col gap-2">
                <label class="text-lg font-medium" for="username">Enter Username:</label>
                <input id="username" class="p-3 bg-[#393E46] border border-gray-500 rounded text-[#EEEEEE]" type="text" name="username" placeholder="Username">
            </div>

            <div class="flex flex-col gap-2">
                <label class="text-lg font-medium" for="password">Enter Password:</label>
                <input id="password" class="p-3 bg-[#393E46] border border-gray-500 rounded text-[#EEEEEE]" type="password" name="password" placeholder="******">
            </div>

            <div class="flex justify-center mt-6">
                <button class="px-6 py-3 bg-blue-700 rounded-xl hover:bg-blue-900 text-white text-lg font-semibold transition duration-200 ease-in-out">
                    Sign-In
                </button>
            </div>

            <div class="flex flex-col gap-2 mt-4 text-lg">
                <p class="text-[#EEEEEE]">Don't have an Account? <a class="text-green-500 hover:underline" href="/user/signup">Create One</a></p>
                <p class="text-[#EEEEEE]">Forgot Password? <a class="text-purple-500 hover:underline" href="/user/forget-password">Click here</a></p>
            </div>
        </form>
    </div>
</div>

<%- include("partials/footer")%>
