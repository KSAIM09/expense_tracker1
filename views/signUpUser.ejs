
<%- include("partials/header")%> <%- include("partials/nav")%>



<div class="flex justify-center items-center">
    <div class="flex flex-col w-[680px] justify-between items-center">
        <h1 class="text-blue-700 text-6xl mt-[10px] mb-[20px]"><%=title%></h1>
    <form action="/user/signup" method="post" class="flex flex-col justify-center items-start w-[400px] gap-[10px] h-[300px]">

        <div>
            <label class="text-xl mr-4">Enter Username:</label>
            <input class="p-[5px]" type="text" name="username" placeholder="Username">
        </div>
        
        <div>
            <label class="text-xl mr-4">Enter Email:</label>
            <input class="p-[5px]" type="email" name="email" placeholder="john@doe.com">
        </div>

        <div>
            <label class="text-xl mr-4">Enter Password:</label>
            <input class="p-[5px]" type="password" name="password" placeholder="******">
        </div>

        <button class="p-[10px] bg-cyan-500 rounded-xl hover:bg-cyan-700 text-white text-xl">Sign Up</button>
        <p class="text-xl mr-4">Already have an Account? <a class="text-green-500" href="/user/signin">Sign In</a></p>
    </form>
    </div>
</div>


